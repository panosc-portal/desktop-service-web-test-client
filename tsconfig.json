{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": false,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@core": [
        "app/core/"
      ],
      "@shared": [
        "app/shared/"
      ],
      "@user": [
        "app/user/"
      ]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015"
  }
}